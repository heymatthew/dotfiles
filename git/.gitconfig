[include]
	path = ~/.config/local/git_author
[push]
	default = simple
[commit]
	verbose = true
[core]
	excludesfile = ~/.gitignore
	pager = less -iXFR
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
[pull]
	rebase = true
[alias]
	mr = !sh -c 'git fetch $1 merge-requests/$2/head:mr-$1-$2 && git checkout mr-$1-$2' -
	serve = daemon --verbose --export-all --base-path=.git --reuseaddr --strict-paths .git/
	whereami = for-each-ref --sort=committerdate refs/heads/ --format='%(HEAD) %(color:yellow)%(refname:short)%(color:reset) - %(color:red)%(objectname:short)%(color:reset) - %(contents:subject) - %(authorname) (%(color:green)%(committerdate:relative)%(color:reset))'
	stat = status --porcelain
[rerere]
	enabled = true
