brew "rename"
brew "shellcheck"            # ncjones uses this for linting shell stuff
brew "stow"       # manage softlinks for dotfiles
brew "svn"        # required for font-source-code-pro
brew "syncthing"  # keep stuff synced across machines
brew "tig"
brew "tree"
brew "watch"
brew "wget"
brew "zsh"

cask "anki"
cask "audacity"
cask "docker"
