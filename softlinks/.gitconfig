[include]
	# templated for per-machine git settings
	path = ~/.gitlocal
[core]
	excludesfile = ~/.gitexcludes
	pager = less -iXFR
[alias]
	wip = !git add . && git commit -m WIP
	trunk = !git checkout origin/HEAD
	stat = status --porcelain
	lg = log --oneline
	focus = !git branch | grep -v "^*" | xargs git branch -d
	hub = !gh
	trace = !git log $1..origin/head --ancestry-path --merges --reverse
[init]
	defaultBranch = trunk
[diff]
	# https://luppeng.wordpress.com/2020/10/10/when-to-use-each-of-the-git-diff-algorithms/
	algorithm = histogram
[merge]
	#  https://ductile.systems/zdiff3/
	conflictstyle = zdiff3
[pull]
	rebase = true
[push]
	default = current
[rebase]
	updateRefs = true
[commit]
	template = ~/.gitmessage
[branch]
	autoSetupMerge = true

# Some Flick teams have requirements for commit signing
# https://git-scm.com/docs/git-config#_example
[includeIf "hasconfig:remote.*.url:git@github.com:FlickElectric/*"]
[user]
	signingkey = 06125FDEAAD948E8
[commit]
	template = ~/.gitmessage
	gpgsign = true
