[include]
	# templated for per-machine git settings
	path = ~/.git_local
[core]
	excludesfile = ~/.git_ignore
	pager = less -iXFR
[alias]
	wip = !git add . && git commit -m WIP
	trunk = !git checkout origin/HEAD
	stat = status --porcelain
	lg = log --oneline
	focus = !git branch | grep -v "^*" | xargs git branch -d
	hub = !gh
[init]
	defaultBranch = trunk
[pull]
	rebase = true
[push]
	default = current
[rebase]
	updateRefs = true
[commit]
	template = ~/.gitmessage
[branch]
	autoSetupMerge = true
