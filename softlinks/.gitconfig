[include]
	# templated for per-machine git settings
	path = ~/.gitconfig.local
[core]
	excludesfile = ~/.gitignore
	pager = less -iXFR
[init]
	defaultBranch = trunk
[pull]
	rebase = true
[push]
	default = current
[rebase]
	updateRefs = true
[commit]
	verbose = true
	template = ~/.gitmessage
[alias]
	wip = !git add . && git commit -m WIP
	trunk = !git fetch && git checkout $(git origin-head)
	origin-head = !cat .git/origin-head 2>/dev/null || (git origin-head-update && cat .git/origin-head)
	origin-head-update = !git origin-head-get > .git/origin-head
	origin-head-get = !echo "origin/$(git remote set-head origin -a | awk '{print $4}')"
	stat = status --porcelain
	sync = !git fetch && git rebase --interactive origin/HEAD
	lg = log --oneline
	feature = git fetch && git checkout -b origin/HEAD
	focus = !git branch | grep -v "^*" | xargs git branch -d
	hub = !gh
