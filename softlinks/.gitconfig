[include]
	# templated for per-machine git settings
	path = ~/.gitconfig.local
[alias]
	wip = !git commit -a -m WIP
	trunk = !git fetch && git checkout $(git origin-head)
	changes = !git diff $(git origin-head)... --name-only
	origin-head = !cat .git/origin-head 2>/dev/null || (git origin-head-update && cat .git/origin-head)
	origin-head-update = !echo "origin/$(git origin-head-get)" > .git/origin-head
	origin-head-get = !git remote set-head origin -a | awk '{print $4}'
	humans = !git log | grep Author | sort | uniq
[commit]
	verbose = true
[push]
	default = simple
	autoSetupRemote = true
[pull]
	rebase = true
[init]
	defaultBranch = trunk
[core]
	excludesfile = ~/.gitignore
	pager = less -iXFR
